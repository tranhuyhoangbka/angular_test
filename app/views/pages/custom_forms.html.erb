<style>
*.error { color: red; font-weight: bold; }
</style>
<div class="col-md-8 col-md-offset-2" ng-app="exampleApp">
  <script type="text/ng-template" id="triTemplate">
    <div class="well">
      <div class="btn-group">
        <button class="btn btn-default">Yes</button>
        <button class="btn btn-default">No</button>
        <button class="btn btn-default">Not Sure</button>
      </div>
      <span class="error" ng-show="myForm.decision.$error.confidence">
        You need to be sure
      </span>
    </div>
  </script>
  <div ng-controller="defaultController">
    <div>
      <form name="myForm" novalidate>
        <tri-button name="decision" ng-model="dataValue"></tri-button>
      </form>
    </div>
    <div class="well">
      Value: <select ng-model="dataValue">
        <option>Yes</option>
        <option>No</option>
        <option>Not Sure</option>
        <option>Huh?</option>
      </select>
    </div>
  </div>
</div>
